<%= form_with(model: recruitment, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :ゲームタイトル %>
    <%= f.text_field :title, class: 'form-control recruitment_title' %>
  </div>
  <div class="form-group">
    <%= f.label :募集内容 %>
    <%= f.text_area :body, class: 'form-control recruitment_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿する", class: 'btn btn-success' %>
  </div>
<% end %>

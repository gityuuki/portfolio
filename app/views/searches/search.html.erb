<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時
    <tbody>
      <% @recruitments.each do |recruit| %>
        <tr>
          <td><%= recruit.title %></td>
          <td><%= recruit.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
<table class='table'>
  <tr>
    <%= image_tag user.get_profile_image, size: '150x150' %>
  </tr>
  <tr>
    <th></th>
    <td>
      <div class="tag-box">
        <% user.tags.each do |tag| %>
          <span class="label" style="font-size:0.72em;background-color:lightGray;display:inline-block;border-radius:3px;padding:4px 8px;"><%= tag.name %></span>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <th>ユーザー名</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>自己紹介文</th>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <th>フォローの数</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>フォロワーの数</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
    <td><%= render "relationships/btn", user: user %></td>
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
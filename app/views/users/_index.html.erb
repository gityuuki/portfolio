<table class='table'>
  <thead>
    <tr>
      <th>アイコン</th>
      <th>ユーザー名</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <!--<td>-->
        <!--  <div class="tag-box">-->
        <!--  <% user.tags.each do |tag| %>-->
        <!--    <span class="label"><%= tag.name %></span>-->
        <!--  <% end %>-->
        <!--  </div>-->
        <!--</td>-->
        <td><span class = "font-small"><%= link_to user.name, user %></span></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td>
          <% if current_user != user%>
            <% if current_user.following?(user) %>
              <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger pull-right btn-sm" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-primary pull-right btn-sm" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to '詳細ページ', user, class: "user_#{user.id}", class: "btn btn-success pull-right btn-sm" %></td>
        <% if current_user.is_admin? && !user.is_admin && !user.is_guest? %>
         <td><%= link_to '退会ボタン', withdrawal_path(user.id), method: :post, class: "user_#{user.id}", class: "btn btn-danger pull-right btn-sm", data: { confirm: "【確認】アカウントを削除してもよろしいですか？" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>